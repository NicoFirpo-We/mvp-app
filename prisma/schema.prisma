generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Store {
  store_id     Int      @id
  access_token String
  token_type   String   @default("bearer")
  scope        String?  // ejemplo: "write_products"
  installed_at DateTime @default(now())
  status       String   @default("installed")
  updated_at   DateTime @updatedAt
}
